<% layout = 'client' %>

  <!-- MAIN -->
  <main class="container py-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- TICKET -->
        <div class="card shadow-sm border-0">
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <h1 class="h4 text-success mb-2">¡Compra realizada con éxito!</h1>
              <p class="text-muted">Gracias por tu compra</p>
            </div>

            <!-- DETALLES DEL TICKET -->
            <div class="border rounded p-3 mb-4">
              <div class="text-center border-bottom pb-2 mb-3">
                <h5 class="mb-1">AUTOSERVICIO</h5>
                <small class="text-muted">Ticket de compra</small>
              </div>
              
              <div class="row small mb-2">
                <div class="col-6">
                  <strong>Fecha:</strong> <span id="fechaTicket"></span>
                </div>
                <div class="col-6 text-end">
                  <strong>Cliente:</strong> <span id="clienteTicket"></span>
                </div>
              </div>

              <!-- ITEMS COMPRADOS -->
              <div id="itemsTicket" class="mb-3">
                <!-- ITEMS SE CARGAN ACA -->
              </div>

              <div class="border-top pt-2">
                <div class="d-flex justify-content-between">
                  <strong>TOTAL</strong>
                  <strong>$<span id="totalTicket">0.00</span></strong>
                </div>
              </div>
            </div>

            <!-- BOTONES -->
            <div class="text-center">
              <button onclick="generarPDF()" class="btn btn-primary btn-sm me-2">
                <i class="bi bi-download"></i> Descargar PDF
              </button>
              <a href="/" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-house"></i> Volver al inicio
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="/javascripts/ticket.js"></script>