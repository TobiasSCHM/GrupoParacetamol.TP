 
 <%- include('./parciales/header') %>
   
   
   <div class="container">
        <br>
    <table class="table table-hover">
        <tr>
            <th>CÃ“DIGO</th><th>MARCA</th><th>PRECIO</th><th>FOTOS</th><th>ACCIONES</th>
        </tr>
        <% if(prod_obj_array.length < 1){ %>
            <tr><td>---</td><td>---</td><td>---</td><td>---</td></tr>
        <% }
            else {

            for (let index = 0; index < prod_obj_array.length; index++) {
                const dato = prod_obj_array[index];
                if(dato == null){
                    continue;
                } %>

            <tr><td><%= dato.codigo %></td><td><%= dato.marca %></td><td><%= dato.precio %></td>
                <td><img src="<%= dato.path %>" width="80px" hight="80px"></td>
                <td><button type="button" class="btn btn-info" id="" 
                        data-obj='<%= JSON.stringify(dato) %>' name="btnSeleccionar">
                        <span class="bi bi-pencil"></span>
                    </button>
                    <button type="button" class="btn btn-danger" id="" 
                        data-codigo='<%= dato.codigo %>' name="btnEliminar">
                        <span class="bi bi-x-circle"></span>
                    </button>
                </td></tr>
        <%      }  
            } %>
    </table>
    <br>
    <button id="btnAgregarProducto" class="btn btn-info">Agregar nuevo producto</button>
</div>







